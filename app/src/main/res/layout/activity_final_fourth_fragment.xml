<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final_fourth_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_black"
    tools:context="com.WhatsYourScore.apptive.apptive_score.Final_fourth_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="8.5">
        <ListView
            android:id="@+id/final_fourth_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#FFA500"
            android:dividerHeight="2dp"
            android:scrollbars="none"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@drawable/top_border"
        android:layout_weight="1.5">

            <LinearLayout
                android:id="@+id/major_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8">

                    <TextView
                        android:id="@+id/major_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="Major"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <Button
                                android:id="@+id/etc_add_button"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/button_corner"
                                android:visibility="invisible"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <Button
                                android:id="@+id/etc_delete_button"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/button_corner"
                                android:visibility="invisible"/>

                        </RelativeLayout>




                    </LinearLayout>

                </FrameLayout>


                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/add_delete_button"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/button_corner"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent">





            </LinearLayout>

    </FrameLayout>
</LinearLayout>
