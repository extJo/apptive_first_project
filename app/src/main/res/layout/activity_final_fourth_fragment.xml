<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final_fourth_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_black"
    android:orientation="vertical"
    tools:context="com.WhatsYourScore.apptive.apptive_score.Final_fourth_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:layout_weight="9">

        <ListView
            android:id="@+id/final_fourth_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#FFA500"
            android:dividerHeight="2dp"
            android:scrollbars="none"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/major_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <ImageButton
            android:id="@+id/etc_add_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_plusminus_29"
            android:background="@drawable/left_top_corner"
            android:scaleType="fitCenter"
            android:paddingTop="14dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"/>

        <ImageButton
            android:id="@+id/etc_delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_plusminus_30"
            android:background="#222222"
            android:scaleType="fitCenter"
            android:paddingTop="21.5dp"
            android:paddingLeft="20.5dp"
            android:paddingRight="20.5dp"
            android:paddingBottom="20.5dp"/>

    </LinearLayout>


</LinearLayout>
